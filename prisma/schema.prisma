//------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
//  provider = "postgresql"
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

//------------------------------------------------
model user{
  id    BigInt     @id @default(autoincrement())
  title String
  des   String
  rem   String
//  email String  @unique  name  String?
  picurl  String
}


model item {
    item_id Int 
    item_name String
    item_description  String
    item_price DECIMAL(10, 2)
    item_quantity Int

}
